# MANIFEST.in - Specifies additional files to include in source distribution

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include PRD.md
include CONTRIBUTING.md

# Include configuration files
include requirements.txt
include pyproject.toml
include setup.py
include pytest.ini

# Include all templates
recursive-include templates *.md *.py *.js *.jsx *.ts *.tsx *.css *.html *.vue *.svelte

# Include configuration
recursive-include config *.yaml *.yml *.json

# Include documentation
recursive-include docs *.md *.txt

# Include tests (for source distribution)
recursive-include tests *.py

# Include GitHub workflows
recursive-include .github *.yml *.yaml

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib

# Exclude development files
exclude .gitignore
exclude .gitattributes
exclude .editorconfig

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune .pytest_cache
prune .mypy_cache
prune .tox
prune htmlcov
